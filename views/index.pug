    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes')
    link(rel='icon', type='image/png', href='https://www.google.com/images/icons/product/pagespeed-64.png')
